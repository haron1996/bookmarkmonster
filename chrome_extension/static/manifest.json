{
	"manifest_version": 3,
	"name": "BookmarkMonster",
	"version": "0.0.1",
	"description": "BookmarkMonster Chrome Extension",
	"author": "hey@bookmarkmonster.xyz",
	"action": {
		"default_icon": {
			"16": "icon-16.png",
			"32": "icon-32.png",
			"48": "icon-48.png",
			"128": "icon-128.png"
		},
		"default_title": "BookmarkMonster",
		"default_popup": "index.html"
	},
	"web_accessible_resources": [
		{
			"resources": ["_favicon/*", "images/*"],
			"matches": ["<all_urls>", "*://*/*"],
			"extension_ids": ["*"]
		}
	],
	"permissions": ["activeTab", "bookmarks", "cookies"],
	"host_permissions": ["*://*.bookmarkmonster.xyz/"],
	"short_name": "BM",
	"background": {
		"service_worker": "service-worker.js",
		"type": "module"
	},
	"content_scripts": [
		{
		  "matches": ["<all_urls>"],
		  "js": ["content.js"]
		}
	]
}
